<h1 class="users_index_header">Show all users</h1>
<div class="users_wrapper">
  <% @users.each do |user| %>
    <div class="user_index_main_container">
      <%= image_tag("https://images.unsplash.com/photo-1508921912186-1d1a45ebb3c1", class: "user_image_card") %>
      <div class="user_info_container">
         <h2> <%= user.name %> </h2>
          <div class="user_info__posts_counter">
           Number of posts:
           <%= user.posts_counter || 0 %>
         </div>
      </div>
    </div>
  <% end %>
</div>